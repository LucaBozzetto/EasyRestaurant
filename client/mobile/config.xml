<?xml version='1.0' encoding='utf-8'?>
<widget id="com.easyrestaurant.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EasyRestaurant</name>
    <description>
        The official EasyRestaurant mobile app
    </description>
    <author email="864126@stud.unive.it" href="http://lucabozzetto.github.io">
        Luca Bozzetto
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <icon src="res/icon.png"/>
    <allow-intent href="http://*/*" />
    <allow-navigation href="*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
